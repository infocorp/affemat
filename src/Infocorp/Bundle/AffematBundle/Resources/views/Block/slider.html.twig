<link rel="stylesheet" href="{{ asset('bundles/infocorpaffemat/js/nivo-gallery.css') }}">
<div class="sonata-media-block-gallery-container">
  <div id="sonata-media-block-gallery" class="nivoGallery">
    <ul>
      <!-- <img src="{{ asset('bundles/infocorpaffemat/images/logo_affemat.jpg') }}" alt="logo" width="820" height="615"> -->
      {% for slide in slides %}
        <li data-type="image" data-title="{{ slide.title }}" data-caption="{{ slide.abstract }}">
          {% media slide.image, 'reference' %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<script src="{{ asset('bundles/infocorpaffemat/js/jquery.nivo.gallery.min.js') }}"></script>

<script type="text/javascript">
  jQuery(document).ready(function() {
    jQuery('#sonata-media-block-gallery').nivoGallery({
     pauseTime:     3000,
     animSpeed:     300,
     effect:        'fade',
     startPaused:   false,
     directionNav:  true,
     progressBar:   true
   });
  });
</script>